# Programa 2: Ordenación de una fila en Arreglo Multidimensional

# Definimos una matriz 3x3
matriz = [
    [10, 3, 5],
    [8, 2, 6],
    [7, 4, 9]
]

def bubble_sort(fila):
    n = len(fila)
    for i in range(n):
        for j in range(0, n - i - 1):
            if fila[j] > fila[j + 1]:
                fila[j], fila[j + 1] = fila[j + 1], fila[j]
    return fila

# Fila a ordenar (ejemplo: fila 1 → índice 0)
fila_a_ordenar = 1

print("Matriz original:")
for fila in matriz:
    print(fila)

# Ordenamos la fila elegida
matriz[fila_a_ordenar] = bubble_sort(matriz[fila_a_ordenar])

print("\nMatriz con la fila ordenada:")
for fila in matriz:
    print(fila)
